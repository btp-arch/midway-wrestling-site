---
import CTAButtons from "./CTAButtons.astro";

const {
  title,
  subtitle,
  kicker = null,
  primaryLabel = "Call/Text Coach",
  primaryHref = "tel:+19704242757",
  secondaryLabel = "Join Updates",
  secondaryHref = "/membership",
  showCtas = true,
} = Astro.props;

const hasAside = Astro.slots.has("aside");
const hasBelowTitle = Astro.slots.has("below-title");
---
<section class="hero">
  <div class="container hero-inner">
    <div class="hero-content">
      {kicker && <p class="eyebrow">{kicker}</p>}
      <h1 class="hero-title">{title}</h1>
      {hasBelowTitle && (
        <div class="hero-below-title">
          <slot name="below-title" />
        </div>
      )}
      {subtitle && <p class="lead">{subtitle}</p>}
      {showCtas && (
        <CTAButtons
          primaryLabel={primaryLabel}
          primaryHref={primaryHref}
          secondaryLabel={secondaryLabel}
          secondaryHref={secondaryHref}
        />
      )}
      <slot />
    </div>
    {hasAside && (
      <div class="hero-aside">
        <slot name="aside" />
      </div>
    )}
  </div>
</section>
