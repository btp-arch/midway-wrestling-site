---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/schedule", label: "Schedule" },
  { href: "/coaches", label: "Coaches" },
  { href: "/faq", label: "FAQ" },
  { href: "/news", label: "News" },
  { href: "/join", label: "Join" },
];

const facebookLink = "https://www.facebook.com/share/184nobE311/?mibextid=wwXIfr";
---
<footer class="footer">
  <div class="container footer-grid">
    <div class="stack">
      <span class="logo">
        <img
          class="logo-mark logo-mark--lg"
          src="/logos/redhat_no_bg.png"
          alt="Midway Wrestling Club red hat logo"
          width="56"
          height="56"
          loading="lazy"
          decoding="async"
        />
        Midway Wrestling Club
      </span>
      <div class="footer-cta">
        <a
          class="btn primary btn-flip"
          href="tel:+19704242757"
          aria-label="Call/Text Coach at 970-424-2757"
          data-call-button="true"
        >
          <span class="btn-flip-inner" aria-hidden="true">
            <span class="btn-face btn-face--front">Call/Text Coach</span>
            <span class="btn-face btn-face--back">970-424-2757</span>
          </span>
        </a>
        <a class="btn secondary" href="/join">Join Updates</a>
      </div>
    </div>
    <div class="stack">
      <p class="eyebrow">Navigate</p>
      <nav class="footer-links" aria-label="Footer">
        {navLinks.map((link) => (
          <a href={link.href}>{link.label}</a>
        ))}
      </nav>
    </div>
    <div class="stack">
      <p class="eyebrow">Social</p>
      <a class="facebook-preview" href={facebookLink} aria-label="Visit Midway Wrestling Club on Facebook">
        <div class="facebook-preview__header">
          <img
            class="facebook-preview__avatar"
            src="/logos/redhat_no_bg.png"
            alt=""
            width="36"
            height="36"
            loading="lazy"
            decoding="async"
          />
          <div>
            <p class="facebook-preview__title">Midway Wrestling Club</p>
            <p class="facebook-preview__meta">Follow on Facebook</p>
          </div>
        </div>
      </a>
    </div>
  </div>
</footer>
