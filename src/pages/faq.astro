---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
import FAQAccordion from "../components/FAQAccordion.astro";
import CTAButtons from "../components/CTAButtons.astro";

const faqItems = [
  {
    question: "Is this for beginners?",
    answer:
      "Currently, no. Due to time constraints the two practices per week are focused towards wrestlers who already have a solid foundation in the sport. With sufficient interest, additional practice times for beginner and younger wrestlers may be added for the 2026/2027 season.",
  },
  {
    question: "What gear do I need?",
    answer: "Wrestling shoes and athletic clothing.",
  },
  {
    question: "How do I sign up?",
    answer: "Call or text the coach and he will confirm your first practice date.",
  },
  {
    question: "Can parents watch?",
    answer:
      "Yes, parents are welcome to stay and watch practice or drop off and pick up their wrestler at the end.",
  },
  {
    question: "How often are practices?",
    answer: "Currently 2 nights per week.",
  },
  {
    question: "What is the drop-in cost?",
    answer: "$20 per practice. Ask us about sibling/family discounts.",
  },
  {
    question: "What is the monthly cost?",
    answer: "$80 per month. Sibling/family discounts are available.",
  },
  {
    question: "What about season pricing?",
    answer: "Season pricing is available Fall 2026.",
  },
];
---

<BaseLayout
  title="FAQ | Midway Wrestling Club"
  description="Frequently asked questions about practice, gear, and joining Midway Wrestling Club."
>
  <Section
    eyebrow="FAQ"
    title="Questions, answered"
    intro="Quick answers for parents and athletes."
  >
    <FAQAccordion items={faqItems} baseId="faq-main" />
  </Section>

  <Section
    eyebrow="Contact"
    title="Still deciding?"
    intro="Text or call any time for clarification on schedules, pricing, or skill level."
  >
    <CTAButtons
      primaryLabel="Call/Text Coach"
      primaryHref="tel:+19704242757"
      secondaryLabel="Join Updates"
      secondaryHref="/join"
      secondaryVariant="outline"
    />
  </Section>
</BaseLayout>
