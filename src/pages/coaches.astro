---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
import Card from "../components/Card.astro";
---

<BaseLayout
  title="Coaches | Midway Wrestling Club"
  description="Meet the Midway Wrestling Club coaching staff."
>
  <Section
    eyebrow="Coaches"
    title="Meet the coaching staff"
  >
    <div class="grid grid-2 grid-3">
      <Card
        meta="Coach"
        title="Bo Pipher"
      >
        <ul class="checklist checklist-compact">
          <li>Assistant Coach at Colorado Mesa University 2021-Now</li>
          <li>Penn State Wrestling 2016-2021</li>
          <li>3x CHSAA State Champion</li>
          <li>4x CHSAA State Finalist</li>
          <li>Paonia, Colorado</li>
        </ul>
      </Card>
    </div>
  </Section>

  <Section
    eyebrow="Values"
    title="Credentials and values"
    intro="The standards we coach by in every practice."
  >
    <div class="grid grid-2">
      <Card title="Certified and safety-first" description="Background checks and USAW requirements in place." />
      <Card
        title="Fundamental Focus"
        description="We work on building a system of wrestling, rather than trying to teach every move."
      />
      <Card title="Respect and accountability" description="Athletes are expected to listen, work hard, and support teammates." />
      <Card
        title="Communication"
        description="Clear updates on practice and schedule changes."
      />
    </div>
  </Section>

  
</BaseLayout>
